BIN = ./bin/
EXE = apov-convert.exe
OBJS = main.o
OBJS := $(addprefix $(BIN), $(OBJS))

CXFLAGS = -Wpadded -Wpacked -Wall
LDFLAGS = -lstdc++

all: $(BIN)$(EXE)

$(BIN)$(EXE): $(OBJS)
	gcc -o $@ $^ $(LDFLAGS)

$(BIN)%.o: %.cpp
	gcc -o $@ -c $< $(CXFLAGS)
    
clean:
	powershell " Remove-Item ./bin/*.o"
	powershell " Remove-Item ./bin/*.exe"
    